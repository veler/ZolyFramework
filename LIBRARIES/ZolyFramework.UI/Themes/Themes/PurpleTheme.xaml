<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- COLORS -->
    <SolidColorBrush x:Key="ThemeBrush" Color="#9c27b0"/> <!-- 500 -->
    <SolidColorBrush x:Key="DarkerThemeBrush" Color="#6a1b9a" /> <!-- 800 -->
    <SolidColorBrush x:Key="LighterThemeBrush" Color="#ce93d8" /> <!-- 200 -->
    <SolidColorBrush x:Key="VeryLighterThemeBrush" Color="#e1bee7" /> <!-- 100 -->

    <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA" />
    <SolidColorBrush x:Key="LighterBackgroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#e2e2e2" />

    <SolidColorBrush x:Key="HoverBrush" Color="#8e24aa" /> <!-- 600 -->
    <SolidColorBrush x:Key="PressedBrush" Color="#4a148c" /> <!-- 900 -->

    <SolidColorBrush x:Key="TextBrush" Color="#444444" />
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#9e9e9e" />
    <SolidColorBrush x:Key="TextHoverBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="TextPressedBrush" Color="#FAFAFA"/>

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ZolyFramework.UI;component/Themes/ColorSchema.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>
