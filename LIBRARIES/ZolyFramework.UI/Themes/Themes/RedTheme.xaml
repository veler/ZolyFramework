<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- COLORS -->
    <SolidColorBrush x:Key="ThemeBrush" Color="#e51c23"/> <!-- 500 -->
    <SolidColorBrush x:Key="DarkerThemeBrush" Color="#c41411" /> <!-- 800 -->
    <SolidColorBrush x:Key="LighterThemeBrush" Color="#f69988" /> <!-- 200 -->
    <SolidColorBrush x:Key="VeryLighterThemeBrush" Color="#f9bdbb" /> <!-- 100 -->

    <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA" />
    <SolidColorBrush x:Key="LighterBackgroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#e2e2e2" />

    <SolidColorBrush x:Key="HoverBrush" Color="#dd191d" /> <!-- 600 -->
    <SolidColorBrush x:Key="PressedBrush" Color="#b0120a" /> <!-- 900 -->

    <SolidColorBrush x:Key="TextBrush" Color="#444444" />
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#9e9e9e" />
    <SolidColorBrush x:Key="TextHoverBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="TextPressedBrush" Color="#FAFAFA"/>

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ZolyFramework.UI;component/Themes/ColorSchema.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>
