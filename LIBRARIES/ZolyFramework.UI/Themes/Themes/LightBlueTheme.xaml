<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- COLORS -->
    <SolidColorBrush x:Key="ThemeBrush" Color="#03a9f4"/> <!-- 500 -->
    <SolidColorBrush x:Key="DarkerThemeBrush" Color="#0277bd" /> <!-- 800 -->
    <SolidColorBrush x:Key="LighterThemeBrush" Color="#81d4fa" /> <!-- 200 -->
    <SolidColorBrush x:Key="VeryLighterThemeBrush" Color="#b3e5fc" /> <!-- 100 -->

    <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA" />
    <SolidColorBrush x:Key="LighterBackgroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#e2e2e2" />

    <SolidColorBrush x:Key="HoverBrush" Color="#039be5" /> <!-- 600 -->
    <SolidColorBrush x:Key="PressedBrush" Color="#01579b" /> <!-- 900 -->

    <SolidColorBrush x:Key="TextBrush" Color="#444444" />
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#9e9e9e" />
    <SolidColorBrush x:Key="TextHoverBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="TextPressedBrush" Color="#FAFAFA"/>

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ZolyFramework.UI;component/Themes/ColorSchema.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>
